#include <stdio.h>

void input_data(int *, int *);
double average(int, int);

int main(){
    int a, b;
    double avg;

    input_data(&a, &b);
    avg = average(a, b);
    printf("%d와 %d의 평균: %.1lf\n", a, b, avg);

    return 0;
    
}

#include <stdio.h>

void input_data(int *pa, int *pb){
    printf("두 정수 입력: ");
    scanf("%d%d",  pa, pb);
}

double average(int a, int b){
    int tot;
    double avg;

    tot = a + b;
    avg = tot / 2.0;

    return avg;
}
